{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",                       // Папка для компиляции
    "rootDir": "./src",                       // Указываем папку исходников
    "baseUrl": "./",                          // Базовый путь
    "paths": {
      "@/*": ["src/*"]                        // Алиас для удобства
    }
  },
  "include": ["src/**/*"],                    // Включаем только исходные файлы
  "exclude": ["node_modules", "dist"]         // Исключаем node_modules и dist
}
